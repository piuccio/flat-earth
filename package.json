{
  "name": "flat-earth",
  "version": "0.0.0",
  "description": "Modern set of functions for handling coordinates in Node.js or the browser",
  "repository": {
    "type": "git",
    "url": "git://github.com/piuccio/flat-earth.git"
  },
  "scripts": {
    "build": "rollup -c",
    "prepare": "npm run build",
    "lint": "eslint --fix --ignore-path .gitignore .",
    "test": "jest",
    "test:coverage": "jest --bail --coverage",
    "test:watch": "jest --watchAll",
    "pretest:ci": "npm run lint",
    "test:ci": "jest --coverage",
    "posttest:ci": "codecov",
    "posttest": "npm run lint",
    "posttest:coverage": "npm run lint",
    "preproduction": "git checkout master && git pull",
    "production": "np --no-cleanup"
  },
  "main": "build/bundle.cjs.js",
  "module": "build/bundle.es.js",
  "browser": "build/bundle.umd.js",
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.44",
    "@babel/plugin-transform-modules-commonjs": "^7.0.0-beta.44",
    "@babel/preset-env": "^7.0.0-beta.44",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^22.4.3",
    "codecov": "^3.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.10.0",
    "jest": "^22.4.3",
    "latlon-geohash": "^1.1.0",
    "np": "^2.20.1",
    "regenerator-runtime": "^0.11.1",
    "rollup": "^0.57.1",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0"
  },
  "engines": {
    "node": ">6"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "es2015": {
            "modules": false
          }
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs"
        ]
      }
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "tests/.*\\.test\\.js$"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "overrides": [
      {
        "files": [
          "**/tests/*.test.js"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "rules": {
      "arrow-parens": [
        "error",
        "always"
      ],
      "function-paren-newline": [
        "error",
        "consistent"
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "import/prefer-default-export": 0,
      "no-use-before-define": [
        "error",
        {
          "functions": false
        }
      ]
    }
  }
}
